---
import githubIcon from '@mdi/svg/svg/github.svg?raw'
import linkedinIcon from '@mdi/svg/svg/linkedin.svg?raw'
import resumeIcon from '@mdi/svg/svg/file-account.svg?raw'

export type Props = Record<string, never>

const today = new Date()
---

<style>
    .icon > :global(svg) {
        width: 100%;
        height: 100%;
        fill: currentColor;
    }
</style>

<footer
    class="footer footer-center gap-2 flex-none p-4 bg-base-300 text-base-content">
    <p>
        &copy; {today.getFullYear()} Jiajie Chen. All rights reserved.
    </p>
    <div class="grid grid-flow-col gap-2">
        <a
            class="icon w-7 h-7 p-0.5"
            href="/resume"
            target="_blank"
            aria-label="My Resume"
            set:html={resumeIcon}
        />
        <div class="divider divider-horizontal mx-0 w-0"></div>
        <a
            class="icon w-7 h-7 p-0.5"
            href="https://github.com/jiajie-chen"
            target="_blank"
            aria-label="My Github"
            set:html={githubIcon}
        />
        <a
            class="icon w-7 h-7 p-0.5"
            href="https://www.linkedin.com/in/jjc95/"
            target="_blank"
            aria-label="My Linkedin"
            set:html={linkedinIcon}
        />
    </div>
</footer>
