{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strictNullChecks": true,
        "allowJs": true,
        "checkJs": true,
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"]
        }
    },
    "include": ["src/**/*", "*", ".*"]
}
